<%= form_with(model: crianca, class: "contents") do |form| %>
  <% if crianca.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(crianca.errors.count, "error") %> prohibited this crianca from being saved:</h2>

      <ul>
        <% crianca.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row my-5 w-full">
    <div class="w-full sm:w-3/4 mx-2">
      <%= form.label :nome, class: 'text-xs text-gray-400' %>
      <%= form.text_field :nome, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="w-full sm:w-1/4 mx-2">
      <%= form.label :nascimento, class: 'text-xs text-gray-400' %>
      <%= form.date_field :nascimento, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>

  <div class="my-5 w-full">
    <div class="mx-2">
      <%= form.label :observacoes, class: 'text-xs text-gray-400' %>
      <%= form.text_area :observacoes, rows: 4, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit "Adicionar", class: "rounded-full py-2 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
